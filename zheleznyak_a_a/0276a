#include <iostream>
#include <vector>
#include <cmath>
int main() 
{
    long long int u = -(10e10);
    int k = 0, n = 0, ut = 0, f = 0, t = 0;
    std::cin >> n >> k;
    for (int i = 0; i < n; i ++)
    {
        std::cin >> f >> t;
        if (t > k)
        {
            ut = f - (t - k);
        }
        else 
        {
            ut = f;
        }
        
        if (ut > u)
        {
            u = ut;
        }
    }
    std::cout << u;
}
